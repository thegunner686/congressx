datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
  state String?
  district Int?
}

model Representative {
  id String @id @default(uuid())
  imageUrl String
  invertedOrderName String
  partyName String
  startYear Int
  state String
  district Int?
  currentChamber String
}

model State {
  name String @id
  abbreviation String
  imageUrl String
}
